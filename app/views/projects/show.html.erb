<p id="notice"><%= notice %></p>

<div class="home-container">
  <div class="left-top">
    <h1><%= @project.name %></h1>
    <p><%= @project.description %></p>
  </div>
  <div class="right">
    <div class="gradient">
    <%= image_tag("Light.svg", :alt => "Chat", :class => "img-light") %>
    </div>
  </div>
</div>

<footer>
  <% if user_signed_in? %>
    <% if @project.user_id == current_user.id %>
      <%= link_to 'Edit project', edit_project_path(@project), :class => "btn-secondary" %>
    <%end%>
  <%else%>
    <% controller.redirect_to new_user_session_path, notice: "Login or sign up to access the project" %>
  <% end %>
  <%= link_to 'Open chat', messages_path(:project_id => @project.id), :class => "btn-primary" %>
</footer>
<%= link_to 'Back', projects_path %>
